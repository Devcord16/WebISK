<%- include("partials/header") %>

<div class="container-fluid text-center my-3">
  <div class="row px-2">
    <div class="col-12 col-lg-8">
      <div class="bg-dark pt-3 pb-1 rounded-4 mb-2 mb-lg-0" style="--bs-bg-opacity: 75%;">
        <h1 class="text-white fw-bold mb-3">List Staff ISK</h1>
        <div class="overflow-x-scroll px-3 mx-2" >
          <table class="table table-dark fs-4 align-middle" style="opacity: 75%;">
            <thead>
              <tr>
                <th class="px-3" scope="col">No.</th>
                
                <th class="px-3" scope="col" colspan="2">User</th>
                <th class="px-3" scope="col" colspan="3">Role</th>
              </tr>
            </thead>
            <tbody style="--bs-bg-opacity: 75%;">
              <% levelingData.levels.forEach((user, i) => { %>
              <tr>
                <td class="px-3"><%= i + 1 %></td>
                <td class="px-3">
                  <img
                    src="https://cdn.discordapp.com/avatars/<%= user.userId %>/<%= user.avatar %>.webp?size=64"
                    alt="<%= user.tag %> avatar"
                    class="rounded-circle border"
                    width="64"
                    onerror="this.onerror=null; this.src='https://cdn.discordapp.com/embed/avatars/1.png'"
                  />
                </td>
                <td class="px-3"><%= user.tag %></td>
                <td class="px-3">Space Force</td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <div class="row">
        <div class="col-12 col-md-6 col-lg-12" id="role">
          <div class="card mt-3 mt-md-2 bg-dark text-white rounded-4" style="--bs-bg-opacity: 75%;">
            <div class="card-body">
              <h1 class="card-title mb-3">Role Admin</h1>
              <ul>
                <li>
                  <strong style="color: #fff">@Higgs Boson</strong> - Server owner
                </li>
                <li>
                  <strong style="color: #9165de">@Neuron</strong> - Staff bidang
                  pendidikan
                </li>
                <li>
                  <strong style="color: #46beff">@Space Force</strong> - Staff
                  bidang moderasi
                </li>
              </ul>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
